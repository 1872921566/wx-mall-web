.detail_index {
  padding-bottom: 90rpx;
}
.detail_index .detail_swiper swiper {
  height: 65vw;
  text-align: center;
}
.detail_index .detail_swiper swiper image {
  width: 75%;
}
.detail_index .goods_price {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.detail_index .goods_name_row {
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 15rpx 0;
  display: flex;
}
.detail_index .goods_name_row .goods_name {
  flex: 5;
  font-size: 30rpx;
  color: #000;
  padding: 0 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.detail_index .goods_name_row .goods_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000;
}
.detail_index .goods_info .goods_info_title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
  padding: 22rpx;
}
.detail_index .btm_tool {
  border-top: 1rpx solid #ccc;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  background-color: #fff;
}
.detail_index .btm_tool .btm_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  position: relative;
}
.detail_index .btm_tool .btm_item button {
  top: 0;
  left: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.detail_index .btm_tool .btm_cart {
  flex: 2;
  background-color: #ffa500;
  color: #fff;
  font-weight: 600;
  font-size: 30rpx;
}
.detail_index .btm_tool .btm_buy {
  flex: 2;
  background-color: #eb4450;
  color: #fff;
  font-weight: 600;
  font-size: 30rpx;
}
